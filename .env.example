################### Env ###################
# Start mode
NODE_ENV="development"

# Database connection string
# Replace with your actual database connection string
DATABASE_URL="postgresql://johndoe:randompassword@localhost:5432/mydb?schema=public"

# JWT secret for signing tokens
# Replace with a secure random string
JWT_SECRET="randomlyGeneratedSecretKey123"

# JWT refresh secret for refresh tokens (should be different from JWT_SECRET)
JWT_REFRESH_SECRET="randomlyGeneratedRefreshSecretKey456"

# JWT token expiration times
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Session secret for session management
# Replace with a secure random string
SESSION_SECRET="randomlyGeneratedSessionKey123"

# Application settings
# Port on which the application will run
PORT=5300

# Login service configuration
LOGIN_SERVICE_URL="http://localhost:5301"

# Database Connection Retry Configuration (optional)
# These environment variables can be used to override default retry settings
DB_RETRY_MAX_ATTEMPTS=5
DB_RETRY_INITIAL_DELAY=1000
DB_RETRY_MAX_DELAY=30000
DB_RETRY_BACKOFF_MULTIPLIER=2

# Allow server to start even if database is unreachable (degraded mode)
ALLOW_DEGRADED_START=false
