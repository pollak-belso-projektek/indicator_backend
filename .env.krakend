################### Environment ###################
NODE_ENV=development

################### Database ###################
POSTGRES_DB=indicator_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/indicator_db?schema=public

################### JWT Secrets ###################
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-me-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your-super-secret-session-key-change-me

################### Service URLs ###################
LOGIN_SERVICE_URL=http://login-service:5301
MAIN_SERVICE_URL=http://main-service:5300

################### Redis ###################
REDIS_URL=redis://redis:6379

################### RabbitMQ ###################
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672/indicator
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin

################### InfluxDB ###################
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=adminpassword
INFLUXDB_ORG=indicator
INFLUXDB_BUCKET=metrics
INFLUXDB_TOKEN=my-super-secret-auth-token

################### Grafana ###################
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

################### pgAdmin ###################
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin

################### CORS ###################
CORS_ORIGINS=http://localhost:5173,http://172.16.0.100:5174,https://indikator.pollak.info,http://10.0.1.7:5173,http://192.168.1.6:5173

################### Rate Limiting ###################
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

################### Logging ###################
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5044
