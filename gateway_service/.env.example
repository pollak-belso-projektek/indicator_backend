PORT=5000
NODE_ENV=development

# API Keys for frontend access (comma-separated for multiple keys)
API_KEYS=your_secure_api_key_here

# Service URLs
LOGIN_SERVICE_URL=http://localhost:5301
MAIN_SERVICE_URL=http://localhost:5300

# JWT Configuration (must match the services)
JWT_SECRET=your_super_secret_jwt_key
JWT_REFRESH_SECRET=your_super_secret_refresh_key

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins
CORS_ORIGINS=http://localhost:5173,http://172.16.0.100:5174,https://indikator.pollak.info

# Health check intervals
HEALTH_CHECK_INTERVAL=30000
